form complexExample {
  "Enter a number" globalNumber: integer

  if (globalNumber > 0) {
    "Is the number positive?" isPositive: boolean

    if (isPositive) {
      "Enter a positive number" positiveNumber: integer = globalNumber

      if (positiveNumber > 10) {
        "Number is greater than 10" isGreaterThanTen: boolean
        "Local variable shadowing global" globalNumber2: integer = positiveNumber - 10
      }
    }
  }

  if (globalNumber <= 0) {
    "Is the number negative or zero?" isNonPositive: boolean

    if (isNonPositive) {
      "Enter a number" negativeNumber: integer = globalNumber
      "Reusing inner scope variable" isGreaterThanTen2: boolean = negativeNumber > 0 - 10
    }
  }

  "Using globalNumber" finalValue: integer = globalNumber * 2
}
